<div class="wrapper">
  <div class="container">
    <div class="show-card">
      <div class="row">
        <div class="col">
          <div class="show-card-header">
            <p id="tagline"><%= @tool.description %></p>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div class="show-card-components">
            <%= image_tag "//logo.clearbit.com/#{@tool.website_url.match(/https:\/\/(.*)\//)[1]}", style: "height: 70px"%> <br>
            <p><%= link_to @tool.name, @tool.website_url %></p>
            <p><%= @tool.website_url %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render "shared/tool_modal" %>
